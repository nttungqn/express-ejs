<div class="container-fluid">
    <div class="d-sm-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark mb-0">Thông tin người dùng</h3>
    </div>
    <div class="row mb-3">
        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-body text-center shadow"><img class="rounded-circle mb-3 mt-4"
                        src="../assets/img/avatars/logo-khtn.png" width="160" height="160">
                    <div class="mb-3"><button class="btn btn-primary btn-sm" type="button">Thay đổi ảnh
                            đại diện</button></div>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="row mb-3 d-none">
                <div class="col">
                    <div class="card text-white bg-primary shadow">
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col">
                                    <p class="m-0">Peformance</p>
                                    <p class="m-0"><strong>65.2%</strong></p>
                                </div>
                                <div class="col-auto"><i class="fas fa-rocket fa-2x"></i></div>
                            </div>
                            <p class="text-white-50 small m-0"><i class="fas fa-arrow-up"></i>&nbsp;5%
                                since last month</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card text-white bg-success shadow">
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col">
                                    <p class="m-0">Peformance</p>
                                    <p class="m-0"><strong>65.2%</strong></p>
                                </div>
                                <div class="col-auto"><i class="fas fa-rocket fa-2x"></i></div>
                            </div>
                            <p class="text-white-50 small m-0"><i class="fas fa-arrow-up"></i>&nbsp;5%
                                since last month</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="card shadow mb-3">
                        <div class="card-header py-3">
                            <p class="text-primary m-0 font-weight-bold">Thiết lập thông tin cá nhân</p>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group"><label for="first_name"><strong>Họ và
                                                    tên</strong><br></label><input class="form-control" type="text"
                                                placeholder="Nguyễn Thanh Tùng" name="first_name"></div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group"><label for="username"><strong>Tên đăng
                                                    nhập</strong><br></label><input class="form-control" type="text"
                                                placeholder="nttqn" name="username"></div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group"><label for="email"><strong>Địa chỉ
                                                    email</strong><br></label><input class="form-control" type="email"
                                                placeholder="1712882@student.hcmus.edu.vn" name="email">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group"><label for="address"><strong>Địa
                                            chỉ</strong><br></label><input class="form-control" type="text"
                                        placeholder="67 Xô Viết Nghệ Tinh, phường 17, quận Bình Thạnh" name="address">
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group"><label for="city"><strong>Thành
                                                    phố</strong><br></label><input class="form-control" type="text"
                                                placeholder="Hồ Chí Minh" name="country">
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group"><label for="country"><strong>Quốc
                                                    gia</strong><br></label><input class="form-control" type="text"
                                                placeholder="Việt Nam" name="country"></div>
                                    </div>
                                </div>
                                <div class="form-group"><button class="btn btn-primary btn-sm" type="submit">Lưu thiết
                                        lập</button></div>
                            </form>
                        </div>
                    </div>
                    <div class="card shadow"></div>
                </div>
            </div>
        </div>
    </div>
</div>